<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bbcarticlereader">

    <uses-feature
        android:name="android.hardware.touchscreen"
        android:required="false" />
    <uses-feature
        android:name="android.software.leanback"
        android:required="true" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BBCArticleReader">
        <activity
            android:name=".BBCFeed"
            android:exported="false"
            android:label="@string/feed"/>
        <activity
            android:name=".AccountLogin"
            android:exported="false"
            android:label="@string/enterButton" />
        <activity
            android:name=".Account"
            android:exported="false"
            android:label="@string/account" />
        <activity
            android:name=".HelpPop"
            android:exported="false" />
        <activity
            android:name=".DetailsFragment"
            android:exported="false" />
        <activity
            android:name=".BaseActivity"
            android:exported="false" />
        <activity
            android:name=".Favourites"
            android:exported="false"
            android:label="@string/favourites" />
        <activity
            android:name=".MyGeneration"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LEANBACK_LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>